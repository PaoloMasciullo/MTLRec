{
  "model": "DIVAN",
  "config": {
    "embedding_dim": 64,
    "attention_hidden_sizes": [ 64 ],
    "attention_hidden_activations": "Dice",
    "dnn_hidden_sizes": [ 512, 128, 64 ],
    "dnn_hidden_activations": "ReLu",
    "dnn_output_size": 1,
    "dnn_output_activation": "Sigmoid",
    "dnn_dropout": 0.5,
    "gate_hidden_units": [128, 64],
    "gate_hidden_activations": "Relu",
    "gate_output_size": 1,
    "gate_output_activation": "Sigmoid",
    "gate_dropout": 0.5,
    "pop_hidden_units": [512, 256, 128],
    "pop_activations": "ReLu",
    "pop_output_size": 1,
    "pop_output_activation": "Sigmoid",
    "pop_dropout": 0.5,
    "use_batchnorm": true,
    "target_features": [ "article_id", "category", "subcat1", "topic1", "sentiment_label"],
    "sequence_features": [ "hist_id", "hist_cat", "hist_subcat1", "hist_topic1", "hist_sentiment"],
    "recency_features": [ "publish_days", "hours_since_publish", "cumulative_exposure_count",
      "relative_popularity_change_48h", "hourly_exposure_count", "article_frequency_in_session",
      "time_diff_in_session", "deviation_from_session_mean", "articles_browsed_by_user"],
    "target_pretrained_multimodal_embeddings": [ "article_id_img", "article_id_txt" ],
    "sequence_pretrained_multimodal_embeddings": [ "hist_id_img", "hist_id_txt" ],
    "attention_dropout": 0.5,
    "use_softmax": false
  }
}